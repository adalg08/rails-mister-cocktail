<div class="container text-center">
  <h2><%= @cocktail.name.capitalize %></h2>
  <p><%= link_to "edit", edit_cocktail_path(@cocktail), class: "btn btn-default" %></p>
  <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, width: 200 %>
  <% end %>
  <h3><%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-default" %></h3>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "❌", dose_path(dose), method: :delete %></p>
  <% end %>
  <hr>
  <div class="review">
    <h3>Reviews</h3>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <% @cocktail.reviews.each do |review| %>
          <blockquote>
           <p><%= review.content %></p>
            <small><%= review.author %></small>
          </blockquote>
        <% end %>
        <hr>
        <p><b>ADD YOUR REVIEW !</b></p>
        <hr>
        <%= simple_form_for [@cocktail, @review] do |f| %>
          <%= f.input :author %>
          <%= f.input :content %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="padded">

  </div>

</div>
